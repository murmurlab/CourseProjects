{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc etkin dosyayı derle",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "get_next_line.c",
                "get_next_line_utils.c",
                /* "-D BUFFER_SIZE=22", */
                "-Wall",
                "-Wextra",
                "-Werror",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Hata Ayıklayıcısı tarafından oluşturulan görev."
        }
    ],
    "version": "2.0.0"
}